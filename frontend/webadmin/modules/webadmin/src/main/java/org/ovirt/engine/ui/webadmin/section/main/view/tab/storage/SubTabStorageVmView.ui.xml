<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:com.google.gwt.editor.ui.client"
	xmlns:f="urn:import:org.ovirt.engine.ui.webadmin.widget.form">

	<ui:style>
		.mainContainer {
		}

		.headerTableContainer {
			padding-top: 10px;
			padding-right: 2px;
			width: 100%;
			position: absolute;
		}

		.vmTreeContainer {
			width: 100%;
			position: absolute;
			overflow-y: scroll;
			top: 38px;
			bottom: 0px;
			left: 0px;
			right: 0px;
		}
	</ui:style>

	<g:VerticalPanel ui:field="mainContainer" addStyleNames="{style.mainContainer}">
		<g:SimplePanel ui:field="headerTableContainer" addStyleNames="{style.headerTableContainer}"></g:SimplePanel>
		<g:SimplePanel ui:field="vmTreeContainer" addStyleNames="{style.vmTreeContainer}"></g:SimplePanel>
	</g:VerticalPanel>

</ui:UiBinder>
